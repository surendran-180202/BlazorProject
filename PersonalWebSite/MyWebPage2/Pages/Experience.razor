@page "/Experience"
@using MyWebPage2.Data
@inject NavigationManager uriHelper;
@inject UserServices userService;


<PageTitle>Buiness</PageTitle>

<br/>
<center>
<div class="table">
     @if (Experiencetable.Count == 0)
        {
            <div class="wrapper">
                <div class="circle"></div>
                <div class="circle"></div>
                <div class="circle"></div>
                <div class="shadow"></div>
                <div class="shadow"></div>
                <div class="shadow"></div>
                <span>Loading</span>
            </div>
        }
        else
        {
          <table>
              <tr>
                  <th>Year</th>
                  <th>Learing</th>
                  <th>Institute</th>
              </tr>
            @foreach (var experience in Experiencetable)
            {
                <tr>
                    <td width="20%">@experience.YEAR</td>
                    <td width="40%">@experience.LEARING</td>
                    <td width="40%">@experience.INSTITUTE</td>
                </tr>
            }
           </table>
        }
</div>
    <div class="ResumeButton">
        <a href="PdfView"> <button @onclick="ViewResume">View Resume <i class="fa fa-arrow-circle-down"></i> </button></a>
    </div>
</center>



@code{
    tblUser AddUser = new tblUser();
    List<tblExperience> Experiencetable = new List<tblExperience>();

    protected override async Task OnInitializedAsync()
    {
        await Task.Run(LoadEducation);
    }
    private void LoadEducation()
    {
        System.Threading.Thread.Sleep(2000);
        Experiencetable = userService.Experience();
    }
    protected override void OnInitialized()
    {
       
    }
    public void ViewResume()
    { }

   
}
